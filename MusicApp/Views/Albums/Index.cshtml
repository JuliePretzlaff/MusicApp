@model IEnumerable<MusicApp.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WonAward)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BestHit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artist.ArtistName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WonAward)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumPhoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BestHit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.ArtistName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlbumID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlbumID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlbumID })
        </td>
    </tr>
}

</table>
